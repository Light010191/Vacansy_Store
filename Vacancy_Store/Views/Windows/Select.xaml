<Window x:Class="Vacancy_Store.Views.Windows.Select"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vacancy_Store.Views.Windows"
        mc:Ignorable="d"
        Title="Select" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Что делаем?"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="20"/>
        <Button Grid.Row="1"
            Content="Ищу работу"
                Foreground="Black"
                BorderBrush="Black"
                HorizontalAlignment="Center"
                FontSize="20"
                Click="Res_Click"/>
        <Button Grid.Row="2"
            Content="Даю работу"
                Foreground="Black"
                BorderBrush="Black"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="20"/>
    </Grid>
</Window>
